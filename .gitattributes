# LFS

*.psd filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.tga filter=lfs diff=lfs merge=lfs -text
*.fbx filter=lfs diff=lfs merge=lfs -text
*.obj filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.ogg filter=lfs diff=lfs merge=lfs -text
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text

# FMOD Banks
*.bank filter=lfs diff=lfs merge=lfs -text
*.strings.bank filter=lfs diff=lfs merge=lfs -text

# Default for text: normalize to LF
* text=auto eol=lf

# Unity text assets + settings (YAML)
*.meta           text eol=lf
*.unity          text eol=lf
*.prefab         text eol=lf
*.asset          text eol=lf
*.mat            text eol=lf
*.controller     text eol=lf
*.anim           text eol=lf
*.overrideController text eol=lf
*.playable       text eol=lf
*.mask           text eol=lf
*.physicMaterial text eol=lf
*.physicsMaterial2D text eol=lf
*.guiskin        text eol=lf
*.spriteatlas    text eol=lf
*.renderTexture  text eol=lf
*.flare          text eol=lf

# Unity settings / package manifests (also text)
ProjectSettings/*.asset text eol=lf
ProjectSettings/*.txt   text eol=lf
Packages/*.json         text eol=lf
Packages/*.lock         text eol=lf
*.json                  text eol=lf
*.asmdef                text eol=lf
*.cs                    text eol=lf
*.shader                text eol=lf
*.cginc                 text eol=lf
*.hlsl                  text eol=lf
*.glsl                  text eol=lf
*.compute               text eol=lf
*.md                    text eol=lf
*.txt                   text eol=lf
*.yml                   text eol=lf
*.yaml                  text eol=lf
*.xml                   text eol=lf

# FMOD Text files
*.fspro     text eol=lf
*.xml       text eol=lf

.gitignore      text eol=lf
.gitattributes  text eol=lf